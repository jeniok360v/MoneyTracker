<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="pl.project.moneyTracker.AddBudgetEntryActivity">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_contact_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:transitionName="transition_reveal"
        app:backgroundTint="@color/colorPrimary"
        android:src="@drawable/baseline_add_white_18dp"
        app:elevation="0dp"
        app:fabSize="normal"
        app:pressedTranslationZ="8dp" />
    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/root_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundPrimary">


            <Spinner
                android:id="@+id/select_category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <EditText
                android:id="@+id/select_type_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_category_spinner"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/choose_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_type_edittext"
                android:layout_centerHorizontal="true"
                android:text="Button" />

            <Button
                android:id="@+id/add_entry_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose_date_button"
                android:layout_alignStart="@+id/choose_date_button"
                android:text="Add" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>